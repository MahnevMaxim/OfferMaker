<mah:MetroWindow x:Class="OfferMaker.Views.NomenclatureCard"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:OfferMaker.Views"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 mc:Ignorable="d"
                 GlowBrush="Black"
                 WindowStartupLocation="CenterScreen"
                 BorderThickness="0"
                 Title="Номенклатурная карточка" Height="650" Width="900">
    <Grid Margin="15,10">

        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="70" MaxHeight="100"/>
                <RowDefinition Height="190"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.ColumnSpan="2"
                    Margin="0,0,0,10"
                    BorderThickness="1"
                    VerticalAlignment="Stretch"
                    BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}">
                <TextBlock Text="{Binding Nomenclature.Title}" 
                           FontSize="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
            
            <Border Grid.Row="1" Grid.Column="0"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}">
                <Grid Margin="5,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Себестоимость" Grid.Row="0" Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                    <TextBlock Text="Наценка" Grid.Row="1" Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                    <TextBlock Text="Цена" Grid.Row="2" Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                    <TextBlock Text="Прибыль" Grid.Row="3" Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                    
                    <TextBox Grid.Row="0" Grid.Column="1"
                             Text="{Binding Nomenclature.CostPrice}"
                             Margin="10,0"
                             Height="30"/>
                    <TextBox Grid.Row="1" Grid.Column="1"
                             Text="{Binding Nomenclature.Markup}"
                             Margin="10,0"
                             Height="30"/>
                    <TextBox Grid.Row="2" Grid.Column="1"
                             Text="{Binding Nomenclature.Price}"
                             Margin="10,0"
                             Height="30"/>
                    <TextBox Grid.Row="3" Grid.Column="1"
                             Text="{Binding Nomenclature.Profit}"
                             Margin="10,0"
                             Height="30"/>
                    
                    <TextBlock Text="Валюта" Grid.Row="0" Grid.Column="2"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                    <TextBlock Text="Дата" 
                               Grid.Row="1" Grid.Column="2"
                               ToolTip="Дата актуализации цены"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>

                    <ComboBox Grid.Row="0" Grid.Column="3"
                              ItemsSource="{Binding Currencies}" 
                              SelectedItem="{Binding CurrencyCharCode}"
                              Margin="10,0"
                              Height="30"
                              SelectedIndex="0"/>
                    <TextBlock Text="" Grid.Row="1" Grid.Column="3"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>

                </Grid>
            </Border>

            <Border Grid.Row="1" Grid.Column="1"
                    Margin="10,0,0,0"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button CommandParameter="EditImage"
                            VerticalAlignment="Top"
                            Command="{Binding Cmd}"
                            Height="35"
                            Width="35"
                            Margin="5"
                            ToolTip="Добавить фото"
                            Style="{StaticResource MahApps.Styles.Button.Square.Accent}">
                        <iconPacks:PackIconIonicons Kind="AddMD"
                                                    Width="20"
                                                    Height="20"/>
                    </Button>
                    <Image Source="{Binding Image}"
                           Grid.Column="1"
                           Margin="5"/>
                </Grid>
            </Border>

            <Border Grid.Row="2" Grid.ColumnSpan="2"
                    Margin="0,10,0,0"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}">
            </Border>

        </Grid>
    </Grid>
</mah:MetroWindow>
