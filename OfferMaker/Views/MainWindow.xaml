                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Path=Id}"
                                                           Value="0" />
                                                <Condition Binding="{Binding Path=IsMouseOver, RelativeSource={RelativeSource Self}}"
                                                           Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <MultiDataTrigger.Setters>
                                                <Setter Property="Background"
                                                        Value="#99f0a30a"/>
                                            </MultiDataTrigger.Setters>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Path=Id}"
                                                           Value="0" />
                                                <Condition Binding="{Binding Path=IsSelected, RelativeSource={RelativeSource Self}}"
                                                           Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <MultiDataTrigger.Setters>
                                                <Setter Property="Background"
                                                        Value="#ccf0a30a"/>
                                            </MultiDataTrigger.Setters>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Path=IsDelete}"
                                                           Value="True"/>
                                                <Condition Binding="{Binding Path=IsMouseOver, RelativeSource={RelativeSource Self}}"
                                                           Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <MultiDataTrigger.Setters>
                                                <Setter Property="Background"
                                                        Value="#99a20025"/>
                                            </MultiDataTrigger.Setters>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Path=IsEdited}"
                                                           Value="True"/>
                                                <Condition Binding="{Binding Path=IsSelected, RelativeSource={RelativeSource Self}}"
                                                           Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <MultiDataTrigger.Setters>
                                                <Setter Property="Background"
                                                        Value="#cc0078d7"/>
                                            </MultiDataTrigger.Setters>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Path=IsEdited}"
                                                           Value="True" />
                                                <Condition Binding="{Binding Path=IsMouseOver, RelativeSource={RelativeSource Self}}"
                                                           Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <MultiDataTrigger.Setters>
                                                <Setter Property="Background"
                                                        Value="#990078d7"/>
                                            </MultiDataTrigger.Setters>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Path=IsDelete}"
                                                           Value="True"/>
                                                <Condition Binding="{Binding Path=IsSelected, RelativeSource={RelativeSource Self}}"
                                                           Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <MultiDataTrigger.Setters>
                                                <Setter Property="Background"
                                                        Value="#cca20025"/>
                                            </MultiDataTrigger.Setters>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.InputBindings>
                                <MouseBinding MouseAction="LeftDoubleClick"
                                              Command="{Binding Cmd}"
                                              CommandParameter="LoadSelectedOfferTemplate"/>
                            </DataGrid.InputBindings>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="№"
                                                    Binding="{Binding Id}"
                                                    DisplayIndex="0" />
                                <DataGridTextColumn Header="Название"
                                                    Binding="{Binding OfferName}"
                                                    Width="310"
                                                    DisplayIndex="1">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style>
                                            <Setter Property="TextBlock.TextWrapping"
                                                    Value="Wrap" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Дата"
                                                        DisplayIndex="2">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}  {1}">
                                                        <Binding Path="CreateTimeString" />
                                                        <Binding Path="CreateDateString" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Заказчик"
                                                    Binding="{Binding Customer.FullName}"
                                                    DisplayIndex="3" />
                                <DataGridTextColumn Header="Компания"
                                                    Binding="{Binding Customer.Organization}"
                                                    DisplayIndex="4" />
                                <DataGridTextColumn Header="Город"
                                                    Binding="{Binding Customer.Location}"
                                                    DisplayIndex="5" />
                                <DataGridTemplateColumn DisplayIndex="6">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal"
                                                        IsEnabled="{Binding Path=IsDelete, Converter={StaticResource InverseBoolConverter}}">
                                                <Button Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                                        Height="30"
                                                        Width="30"
                                                        Margin="5,0,0,0"
                                                        ToolTip="Загрузить"
                                                        Command="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=DataContext.Cmd}">
                                                    <iconPacks:PackIconMaterial Kind="FolderOpenOutline"
                                                                                Width="15"
                                                                                Height="15" />
                                                    <Button.CommandParameter>
                                                        <MultiBinding Converter="{StaticResource MultiConverter}">
                                                            <Binding Source="LoadOfferTemplate" />
                                                            <Binding Path="." />
                                                        </MultiBinding>
                                                    </Button.CommandParameter>
                                                </Button>
                                                <Button Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                                        Height="30"
                                                        Width="30"
                                                        Margin="5,0,0,0"
                                                        ToolTip="Редактировать"
                                                        Command="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=DataContext.Cmd}">
                                                    <iconPacks:PackIconMaterial Kind="SquareEditOutline"
                                                                                Width="15"
                                                                                Height="15" />
                                                    <Button.CommandParameter>
                                                        <MultiBinding Converter="{StaticResource MultiConverter}">
                                                            <Binding Source="EditOfferTemplate" />
                                                            <Binding Path="." />
                                                        </MultiBinding>
                                                    </Button.CommandParameter>
                                                </Button>
                                                <Button Height="30"
                                                        Width="30"
                                                        Margin="5,0"
                                                        ToolTip="Удалить"
                                                        Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                                        Command="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=DataContext.Cmd}">
                                                    <iconPacks:PackIconMaterial Kind="CloseBoxOutline"
                                                                                Width="15"
                                                                                Height="15" />
                                                    <Button.CommandParameter>
                                                        <MultiBinding Converter="{StaticResource MultiConverter}">
                                                            <Binding Source="OfferTemplateDelete" />
                                                            <Binding Path="." />
                                                        </MultiBinding>
                                                    </Button.CommandParameter>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </AdornerDecorator>
                </GroupBox>
            </Grid>

            <!--#endregion Шаблоны -->

        </Grid>
        <Grid Visibility="{Binding IsBusy, Converter={StaticResource VisibleIfTrue}}"
              d:Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center">
                <mah:ProgressRing IsActive="True"
                                  IsLarge="True" />
                <Label Content="{Binding ProcessStatus}"
                       HorizontalAlignment="Center"
                       Margin="20" />
            </StackPanel>
        </Grid>
    </Grid>
    
    
</mah:MetroWindow>
