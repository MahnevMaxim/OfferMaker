<UserControl x:Class="OfferMaker.Pdf.PdfControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OfferMaker.Pdf.Views"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:layout="clr-namespace:OfferMaker.Pdf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    
    <TabControl x:Name="tabControl1"
                mah:TabControlHelper.Underlined="TabItems"
                Grid.Column="2"
                SelectedIndex="2">
        <TabItem Header="Debug"
                 mah:TabControlHelper.Underlined="TabPanel"
                 mah:HeaderedControlHelper.HeaderFontSize="12">
            <Grid Background="#FFE5E5E5">
                <TreeView ItemsSource="{Binding DebugTree}"/>
            </Grid>
        </TabItem>
        <TabItem Header="Рабочая"
                 mah:TabControlHelper.Underlined="TabPanel"
                 mah:HeaderedControlHelper.HeaderFontSize="12">
            <FlowDocumentScrollViewer>
                <FlowDocument LineStackingStrategy="BlockLineHeight"
                              IsOptimalParagraphEnabled="True"
                              x:Name="flowDocumentAll" 
                              x:FieldModifier="public" 
                              PageHeight="{Binding Height, Source={x:Static layout:PrintLayout.A4}}"
                              PageWidth="{Binding Width, Source={x:Static layout:PrintLayout.A4}}"
                              PagePadding="{Binding Margin, Source={x:Static layout:PrintLayout.A4}}"
                              ColumnWidth="{Binding ColumnWidth, Source={x:Static layout:PrintLayout.A4}}"
                              ColumnGap="1">
                    
                    <Paragraph Margin="0">
                        <local:TitulView/>
                    </Paragraph>

                    <Paragraph Margin="0" x:Name="adv">
                        <ItemsControl ItemsSource="{Binding AfterTitleCollection}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Viewbox Stretch="Uniform">
                                        <local:AdView/>
                                        <!--<Canvas Name="MainCanvas" Height="27.7cm" Width="18cm"
                                                MaxHeight="27.7cm" MaxWidth="18cm"
                                                AllowDrop="True" 
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch">
                                            <Canvas.Background>
                                                <ImageBrush ImageSource="{Binding  Path=.}"/>
                                            </Canvas.Background>
                                        </Canvas>-->
                                    </Viewbox>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <!--<ListBox ItemsSource="{Binding AfterTitleCollection}" Height="1000"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 Margin="5">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="100" Height="100"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}">
                                        <Image Source="{Binding Path=.}"
                                               Margin="5">
                                        </Image>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>-->
                        
                    </Paragraph>
                    
                </FlowDocument>
            </FlowDocumentScrollViewer>
        </TabItem>
        <TabItem Header="С баннером"
                         mah:TabControlHelper.Underlined="TabPanel"
                         mah:HeaderedControlHelper.HeaderFontSize="12">
            <DocumentViewer x:Name="pdfWithBanner" Document="{Binding PdfDocument}"/>
        </TabItem>
        <TabItem Header="Без баннера"
                         mah:TabControlHelper.Underlined="TabPanel"
                         mah:HeaderedControlHelper.HeaderFontSize="12">
            <DocumentViewer/>
        </TabItem>
    </TabControl>
</UserControl>
